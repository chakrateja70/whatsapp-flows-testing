# WhatsApp Flows Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Flow Endpoint Configuration
# =============================================================================

# App Secret from WhatsApp App Dashboard
# Get this from: https://developers.facebook.com/apps/ > Your App > Settings > Basic
APP_SECRET="your_app_secret_here"

# RSA Private Key (generated using key_generator.py)
# Run: python key_generator.py YourPassphrase
PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
Your private key here (multiple lines)
-----END RSA PRIVATE KEY-----"

# Passphrase used to encrypt the private key
PASSPHRASE="your_passphrase_here"

# Server port (default: 3000)
PORT=3000

# Webhook verification token (choose any secure random string)
WEBHOOK_VERIFY_TOKEN="my_verify_token_12345"

# =============================================================================
# OPTIONAL: WhatsApp Cloud API Configuration (for sending messages)
# =============================================================================

# WhatsApp Business Account (WABA) ID
# Get from: WhatsApp Business Manager > Account tools > Business settings
WHATSAPP_WABA_ID="your_waba_id_here"

# WhatsApp Phone Number ID
# Get from: WhatsApp Business Manager > API Setup
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id_here"

# WhatsApp Access Token
# Get from: https://developers.facebook.com/apps/ > Your App > WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN="your_permanent_access_token_here"

# WhatsApp API Version (default: v21.0)
WHATSAPP_API_VERSION="v21.0"

# Your WhatsApp Flow ID (after creating a flow)
WHATSAPP_FLOW_ID="your_flow_id_here"

# =============================================================================
# OPTIONAL: Additional Configuration
# =============================================================================

# Environment (development, production)
ENVIRONMENT="development"

# Enable debug logging (true/false)
DEBUG="true"
